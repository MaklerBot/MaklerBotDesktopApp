{
  "name": "makler-bot",
  "version": "1.0.0",
  "description": "Makler Bot Program",
  "author": "Togrul",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder"
  },
  "build": {
    "appId": "com.makler.bot",
    "productName": "MaklerBot",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "assets/makler-bot.ico",
      "target": "nsis",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "Makler Bot"
    },
    "asarUnpack": [
      "**/playwright/.local-browsers/**",
      "**/playwright-core/.local-browsers/**",
      "index.mjs",
      "my-profile"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "playwright": "^1.54.2"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  }
}
